{
  "name": "redux-sirius",
  "version": "0.1.12",
  "description": "A framework to integrate redux and redux-saga together",
  "license": "MIT",
  "repository": "github:Fullstop000/redux-sirius",
  "main": "dist/sirius.js",
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "lint": "eslint src",
    "test": "jest",
    "test:cov": "jest --coverage",
    "prepare": "npm run clean && npm run lint && npm test && npm run build",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env NODE_ENV=cjs rollup -c -o lib/sirius.js",
    "build:es": "cross-env BABEL_ENV=es NODE_ENV=es rollup -c -o es/sirius.js",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -o dist/sirius.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -o dist/sirius.min.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "keywords": [
    "redux",
    "redux-saga",
    "store",
    "flux",
    "framework"
  ],
  "author": "fullstop000",
  "dependencies": {
    "redux": "^4.0.0",
    "redux-saga": "^1.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix"
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "testdata",
      "examples"
    ]
  },
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "devDependencies": {
    "babel-jest": "^23.4.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "uglify-es": "^3.3.9",
    "warning": "^4.0.2"
  }
}
